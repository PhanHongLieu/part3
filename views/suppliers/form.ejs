

<h1><%= supplier._id ? 'Edit Supplier' : 'New Supplier' %></h1>

<form method="post" action="<%= supplier._id ? '/suppliers/' + supplier._id + '?_method=PUT' : '/suppliers' %>">
  <div>
    <label>Name</label>
    <input type="text" name="name" value="<%= supplier.name || '' %>" required />
  </div>
  <div>
    <label>Address</label>
    <input type="text" name="address" value="<%= supplier.address || '' %>" />
  </div>
  <div>
    <label>Phone</label>
    <input type="text" name="phone" value="<%= supplier.phone || '' %>" />
  </div>
  <button type="submit">Save</button>
</form>
